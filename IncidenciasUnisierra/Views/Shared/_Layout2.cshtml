@using IncidenciasUnisierra.Models
@model LoginViewModel

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body background="~/Content/Images/background.jpg" style=" background-position: center center;
	 background-attachment: fixed; background-size: cover; ">


    <div class="col-md-12">
        <div class="col-md-1">
        </div>
        <div class="col-md-1">
            <img src="~/Content/Images/logous.png" width="163" height="163" />
        </div>
        <div class="col-md-2">

        </div>
        <div class="col-md-4 text-white text-center">
            <h1 style="font-size:42px">Sistema de Registro de Incidencias</h1>
        </div>
        <div class="col-md-4"></div>
    </div>

    <br /><br /><br /><br />



    <div class="col-md-12">
        <div class="row">
            <div class="container" style="margin-top: 3%; width: 44.4% ">
                <div class="navbar navbar-expand-lg navbar-fixed-bottom" style=" background-color: rgba(64,64,64,.85); position:inherit; ">
                </div>
            </div>

        </div>
        <div class="row">
            <div class="container body-content" style="background-color: rgba(242,242,242,.85) ; width: 42%">
                @RenderBody()
            </div>
        </div>
        <div class="row" >
            <footer style="background-color: rgba(255,102,0,.70) ; width: 42%; margin-left:29%">

                <p style="color: white; text-align:end; margin-right: 10%">Accesa</p>
                <hr />


                @if (!User.Identity.IsAuthenticated)
                {
                    <div >
                        <button class="botonF1" id="btnIngresar" style="background-color: rgba(49,175,145,.95);">
                            <span class="glyphicon glyphicon-user"></span>
                        </button>

                        <div class="button botonF2" id="div2" style="background-color: rgba(64,64,64,.85); width:25% ">

                            <h1 style="text-align:center">Bienvenido</h1>
                            <section id="loginForm" style="margin-top: 10%; margin-left:5%">
                                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                {
                                    @Html.AntiForgeryToken()

                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group" style="color:white; text-align:center; margin-left: -2%">

                                        <div class="col-md-12">
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email", style = "background-color:white" })
                                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group" style="color:white; text-align:center; margin-left: -2%">

                                        <div class="col-md-12 " style="margin-top:3%">
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Contraseña", style = "background-color:white" })
                                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <center>
                                        <div class="form-group" style="margin-top:8%; margin-right:3%">

                                            <input type="submit" value="Iniciar Sesión" class="btn btn-default" />
                                        </div>
                                    </center>

                                }
                            </section>
                        </div>
                    </div>
                }



            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)



</body>
</html>
